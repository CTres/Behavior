<div id="assumptions-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"> 
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button> 
						<h3> Assumptions</h3>
					</div>
					<div class="modal-body">
						<%= simple_nested_form_for(resource, url: product_concept_path(@product, resource), html: {class: 'assumptions-fields'}) do |f| %>
							<%= f.fields_for :assumptions do |m| %>
								<%= m.text_field :value, label: false, placeholder: "add assumption"%>
								<%= m.link_to_remove "X" %>
							<% end %>
							<%= f.link_to_add "add assumption", :assumptions %>
					</div>
					<div class="modal-footer"> 
					<%= f.button :submit, 'Save Assumption'%>
					<% end %>
					</div>
				</div>