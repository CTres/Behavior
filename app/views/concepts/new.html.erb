<div class="container">
  <div class="status"></div>
  <br>
  <div class="row" id="feature-row">
    <div class="span8 offset2">
      <div class="feature-inner">
        <%= simple_form_for(@concept, :url => product_concepts_path(@product, @concept), :html => { :method => :post }) do |f| %>
          <%= f.input :title, input_html: {class: "span8"}, placeholder: "add your title", label: false, as: :text, autofocus: true%>
          <%= f.input :description, input_html: {class: "span8"}, placeholder: "add your description", label: false, as: :text%>
          <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
          <%= f.hidden_field :account_id, value: "#{current_account.id}" %>
          <%= f.input :impact, input_html: {class: "span8"}, placeholder: "add your impact", label: false, as: :text, autofocus: false%>
          <%= f.button :submit, 'Create Concept' %>
        <% end %>
         </div>
      </div>
    </div>
  </div>
</div>
