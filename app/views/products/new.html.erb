<div class="container">
  <div class="status"></div>
  <br>
  <div class="row" id="feature-row">
    <div class="span8 offset2">
      <div class="feature-inner">
        <%= simple_form_for(@product, :html => { :method => :post }) do |f| %>
          <%= f.input :name, input_html: {class: "span8"}, placeholder: "Product Name", label: false, as: :text, autofocus: true%>
          <%= f.button :submit, 'Create Product' %>
        <% end %>
         </div>
      </div>
    </div>
  </div>
</div>
