<div class="span3">
	<div class="content-container">
		<div class="content-header">
		<%= link_to product.name, product %>
		</div>
		<div class="content-content">
			<h4> Metrics </h4>
			<ul>
				<% product.metrics.each do |f| %>
					<li>
						<%= f.value %>
					</li>
				<% end %>
			</ul>
			<h4> Goals </h4>
			<ul>
				<% product.goals.each do |f| %>
					<li>
						<%= f.value %>
					</li>
				<% end %>
			</ul>
			<h4> Concept Tests: <%=product.concepts.count%> </h4>
			<ul>
				<% product.concepts.each do |f| %>
					<li>
						<%= link_to f.title, product_concept_path(f, product) %>
						<br>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>


